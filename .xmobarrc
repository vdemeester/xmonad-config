-- Config { font           = "xft:Droid Sans Mono:size=8:bold:antialias=true"
-- Config { font           = "xft:DejaVu Sans Mono:size=8:antialias=true"
Config { font           = "xft:Ubuntu Mono:size=10:antialias=true"
         , bgColor      = "#3f3f3f"
         , fgColor      = "#ffffff"
         , border       = NoBorder
         , borderColor  = "#121212"
         , position     = Top
         , lowerOnStart = True
         , commands     = [ Run Cpu ["<cpu0>/<cpu1>","-L","3","-H","50","-l","#afdf87","--normal","#cb4b16","--high","#dc322f"]   40
                          , Run Cpu ["<cpu0>","-L","10","-H","80","-l","#afdf87","--normal","#cb4b16","--high","#dc322f"]  40
                          , Run Memory ["-t","Mem: <usedratio>%", "-l", "#afdf87", "--normal","#cb4b16","--high","#dc322f"] 40
                          , Run Date "%a %b %_d %H:%M" "date" 60
                          , Run StdinReader
                          , Run BatteryP ["BAT0"] ["-t", "<timeleft> (<left>%)", "--", "-c", "energy_full"]
                             100
                          ]
         , sepChar      = "%"
         , alignSep     = "}{"
         -- ░▒▓❡ ❢ ❤ ❦ ❝ ❞ ➤ ❏ ▤ ▥ ▦ ▧ ▨ ▩ ◈ ◎ ◔ ◜◝◟◞ ◢ ◣ ◤ ◥"
         , template = "%StdinReader% }{%battery% <fc=#657b83>░</fc> %cpu% <fc=#657b83>░</fc> %memory% <fc=#657b83>░</fc> <fc=#ffffaf>%date%</fc>"
         }

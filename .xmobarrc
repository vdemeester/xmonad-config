-- Config { font           = "xft:Droid Sans Mono:size=8:antialias=true"
-- Config { font           = "xft:DejaVu Sans Mono:size=8:antialias=true"
Config { font           = "xft:Ubuntu Mono:size=10:antialias=true"
         , bgColor      = "#262626"
         , fgColor      = "#ffffff"
         , border       = NoBorder
         , borderColor  = "#121212"
         , position     = Top
         , lowerOnStart = True
         , commands     = [ Run Uptime ["-t", "<fc=#999999>up:</fc> <days>d <hours>h"] 100
                          -- , Run Network "eth0" [] 100
                          -- , Run Cpu ["<cpu0>/<cpu1>","-L","3","-H","50","-l","#afdf87","--normal","#cb4b16","--high","#dc322f"]   40
                          -- , Run Cpu ["-t", "cpu <total>% <bar>", "--","<cpu0>","-L","10","-H","80","-l","#afdf87","--normal","#cb4b16","--high","#dc322f"]  40
                          -- , Run MultiCpu ["-t", "<total>% u:<user>%", "--", "-L","10","-H","80","-l","#afdf87","--normal","#cb4b16","--high","#dc322f"] 40
                          , Run MultiCpu ["-t", "<fc=#999999>cpu:</fc> <total>%", "-L","15","-H","65","-l","#afdf87","--normal","#cb4b16","--high","#dc322f" ] 40
                          , Run Memory ["-t","<fc=#999999>mem:</fc> <usedratio>%", "-l", "#afdf87", "--normal","#cb4b16","--high","#dc322f"] 40
                          , Run Date "<fc=#999999>%b. %_d</fc> %H:%M" "date" 60
                          -- , Run Com "cat" ["/proc/loadavg"] "" 40
                          , Run Com "mpdstatus" ["xmobar", "66CCCC", "999999"] "" 60
                          , Run StdinReader
                          , Run BatteryP ["BAT0"] ["-t", "<fc=#999999>bat:</fc> <timeleft> <fc=#999999>(<left>%)</fc>", "--", "-c", "energy_full"] 100
                          ]
         , sepChar      = "%"
         , alignSep     = "}{"
         -- ░▒▓❡ ❢ ❤ ❦ ❝ ❞ ➤ ❏ ▤ ▥ ▦ ▧ ▨ ▩ ◈ ◎ ◔ ◜◝◟◞ ◢ ◣ ◤ ◥"
         , template = "%StdinReader% }{%mpdstatus%    %battery%  %uptime%  %multicpu%  %memory%    <fc=#ffffaf>%date%</fc> "
         }
